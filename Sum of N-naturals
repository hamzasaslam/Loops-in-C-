//This Program shows the Execution of Loops
//Print First N Numbers
#include <iostream>
using namespace std;
int main(){
    int a, n, sum=0;
    cout<<"Please Enter the number of terms"<<endl;
    cin>>n;
    cout<<"The first "<< n<< " natural numbers are: "<<endl;
    cout<<"********************************* "<<endl;
    for(a=1; a<=n; a++){
        cout<<a<<endl;
    }
    for(a=1; a<=n; a++){
        sum=sum+a;
    }
    cout<<"The Sum is= "<<sum;
    return 0;
}
